# Environment Configuration
ENVIRONMENT=development
DEBUG=true

# Security
SECRET_KEY=your-super-secret-key-change-in-production-minimum-32-characters
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=tender_platform
DATABASE_URI=postgresql+asyncpg://postgres:postgres@postgres:5432/tender_platform

# MongoDB Configuration
MONGO_HOST=mongodb
MONGO_PORT=27017
MONGO_USER=mongo_user
MONGO_PASSWORD=mongo_password
MONGO_DB=tender_platform
MONGO_DATABASE_URI=mongodb://mongo_user:mongo_password@mongodb:27017/tender_platform

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379

# AI/LLM Configuration
OLLAMA_API_URL=http://ollama:11434
OLLAMA_DEFAULT_MODEL=llama3:8b
OLLAMA_TIMEOUT=300.0
OLLAMA_MAX_RETRIES=3
OLLAMA_RETRY_DELAY=2.0
OLLAMA_GPU_LAYERS=35
OLLAMA_CONTEXT_LENGTH=4096
OLLAMA_THREADS=8
OLLAMA_TEMPERATURE=0.1

# Document Processing
MAX_DOCUMENT_SIZE_MB=50
TEXT_EXTRACTION_TIMEOUT=120.0
CHUNK_SIZE_TOKENS=3000
CHUNK_OVERLAP_TOKENS=200

# AI Monitoring and Limits
AI_METRICS_ENABLED=true
AI_RESPONSE_TIME_THRESHOLD=60.0
AI_LOG_PROMPTS=true
AI_LOG_RESPONSES=true
AI_RATE_LIMIT_PER_MINUTE=30
AI_RATE_LIMIT_PER_HOUR=500
AI_CONCURRENT_REQUESTS=3

# Email Configuration (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com
EMAIL_USE_TLS=true

# File Storage (local/S3)
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=50
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,xls,xlsx

# WebSocket Configuration
WEBSOCKET_HEARTBEAT_INTERVAL=30

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_CALLS=100
RATE_LIMIT_PERIOD=60

# Session Configuration
SESSION_EXPIRE_HOURS=24
MAX_SESSIONS_PER_USER=5
SESSION_CLEANUP_INTERVAL=3600

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379
CELERY_RESULT_BACKEND=redis://redis:6379
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=["json"]
CELERY_TIMEZONE=UTC
CELERY_ENABLE_UTC=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001"]
CORS_ALLOW_CREDENTIALS=true

# Health Check
HEALTH_CHECK_ENABLED=true

# Production Settings (uncomment for production)
# SSL_REDIRECT=true
# SECURE_COOKIES=true
# SECURE_HEADERS=true
