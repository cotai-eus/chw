# Database Environment Configuration
# Copy this file to .env and adjust the values as needed

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=tender_user
POSTGRES_PASSWORD=secure_postgres_password_here
POSTGRES_DB=tender_platform

# MongoDB Configuration
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_ROOT_USER=tender_admin
MONGO_ROOT_PASSWORD=secure_mongo_password_here
MONGO_DB=tender_platform_flexible

# MongoDB User (Application level)
MONGO_USER=tender_app
MONGO_PASSWORD=secure_mongo_app_password_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=secure_redis_password_here

# Database Management Tools
PGADMIN_EMAIL=admin@tender.local
PGADMIN_PASSWORD=pgadmin_password_here
PGADMIN_PORT=5050

MONGO_EXPRESS_USER=mongo_admin
MONGO_EXPRESS_PASSWORD=mongo_express_password_here
MONGO_EXPRESS_PORT=8081

REDIS_COMMANDER_USER=redis_admin
REDIS_COMMANDER_PASSWORD=redis_commander_password_here
REDIS_COMMANDER_PORT=8082

# Application Configuration
APP_ENV=development
DEBUG=true
SECRET_KEY=your_super_secret_key_here_change_in_production

# AI Service Configuration
AI_SERVICE_URL=http://localhost:8000
AI_API_KEY=your_ai_api_key_here

# File Storage Configuration
UPLOAD_PATH=/app/uploads
MAX_FILE_SIZE=100MB

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password_here
SMTP_TLS=true

# Celery Configuration (for background tasks)
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log

# Security Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=3600

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

# Feature Flags
ENABLE_AI_ANALYSIS=true
ENABLE_REAL_TIME_NOTIFICATIONS=true
ENABLE_DOCUMENT_OCR=true
ENABLE_AUTOMATED_WORKFLOWS=true
